{
  "version": 2,
  "functions": {
    "apps/**/api/**/*.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    { "src": "^/api/telegram$", "dest": "apps/linkedin/api/telegram.py" },

    { "src": "^/api/linkedin/oauth/start$", "dest": "apps/linkedin/api/oauth/start.py" },
    { "src": "^/api/linkedin/oauth/callback$", "dest": "apps/linkedin/api/oauth/callback.py" },

    { "src": "^/api/linkedin/post$", "dest": "apps/linkedin/api/post.py" },
    { "src": "^/api/linkedin/post_media$", "dest": "apps/linkedin/api/post_media.py" },
    { "src": "^/api/linkedin/post_media_multi$", "dest": "apps/linkedin/api/post_media_multi.py" }
  ]
}
